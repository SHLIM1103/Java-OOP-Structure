package viewer;
import java.util.Scanner;
public class Main {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		while (true) {
			System.out.println("Menu: (1)1번 (2)2번 (0)종료");
			switch (scanner.next()) {
			case "0":
				System.out.println("시스템 종료");
				return;
				
			case "1":
				System.out.println("1번 메뉴 실행");
				break;
			}
		}
	}
}