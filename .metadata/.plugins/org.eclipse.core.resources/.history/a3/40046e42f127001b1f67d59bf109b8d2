package day02;

import java.util.Scanner;

class Main {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		GradeBook grade = new GradeBook();
		
		System.out.print("학번: ");
		int id = scanner.nextInt();
		grade.setId(id);
		
		System.out.print("이름: ");
		scanner.nextLine();
		String name = scanner.nextLine();
		grade.setName(name);
		
		System.out.print("국어: ");
		int korean = scanner.nextInt();
		grade.setKorean(korean);
		
		System.out.print("영어: ");
		int english = scanner.nextInt();
		grade.setEnglish(english);
		
		System.out.print("수학: ");
		int math = scanner.nextInt();
		grade.setMath(math);
		
		int sum = grade.getKorean() + grade.getEnglish() + grade.getMath() ;
		double ave = sum / 3.0 ;
		
		System.out.printf("학번: %d 이름: %s%n", grade.getId(), grade.getName());
		System.out.printf("국어: %03d점 영어: %03d점 수학: %03d점", grade.getKorean(), grade.getEnglish(), grade.getMath());
		System.out.printf("총점: %03d점 평균: %.2f점", sum, ave);
		
		scanner.close();
	}
}
