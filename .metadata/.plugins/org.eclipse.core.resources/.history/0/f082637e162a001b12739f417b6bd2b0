package viewer;

public class LoopTest {
	public static void main(String[] args) {
		// 1 + 2 = 3
	
		for (int i = 0; i <= 10; i++) {
			if(i <= 9) {
				System.out.printf("%d + ", i);
			}else if(i == 10) {
				System.out.printf("%d = ", i);
			}
			int sum = 0 ;
			sum += i;
			System.out.println(sum);
		}
		
		// 1 + 2 = 3
		int i = 0;
		while (i < 10) {
			i++;
			
		}
	}
}