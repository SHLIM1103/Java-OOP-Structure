package viewer;

public class LoopTest {
	public static void main(String[] args) {
		// 1 + 2 = 3
		int sum1 = 0 ;
		for (int i = 0; i <= 10; i++) {
			if(i < 10) {
				System.out.printf("%d + ", i);
				sum1 += i ;
			}else {
				System.out.printf("%d = ", i);
				sum1 += i ;
				System.out.println(sum1);
			}
		}

		// 1 + 2 = 3
		int i = 0;
		int sum2 = 0;
		while (i < 10) {
			System.out.printf("%d + ", i);
			sum2 += i ;
			i++;
			if(i == 10) {
				System.out.printf("%d = ", i);
				sum2 += i ;
			}
		}
		System.out.println(sum2);
	}
}
